receivers:
  otlp:
    protocols:
      grpc:
      http:

  prometheus:
    config:
      scrape_configs:
        - job_name: 'otel-collector'
          scrape_interval: 10s
          static_configs:
            - targets: ['0.0.0.0:8888']

  fluentforward:
    endpoint: 0.0.0.0:24224

processors:
  ## ğŸ” Filtering Processor - Drop Debug Logs & Unwanted Services
  filter:
    traces:
      exclude:
        match_type: regexp
        services: ["internal-*"]
    logs:
      exclude:
        match_type: strict
        record_attributes:
          key: "log.level"
          value: "debug"

  ## ğŸ› ï¸ Attributes Processor - Remove Sensitive Data
  attributes:
    actions:
      - key: user.id
        action: delete
      - key: pii.data
        action: hash
      - key: http.method
        action: update
        value: "POST"

  ## ğŸ“Š Resource Processor - Add Cloud Metadata
  resource:
    attributes:
      - key: environment
        value: "production"
        action: insert
      - key: cloud.region
        value: "us-east-1"
        action: upsert

  ## ğŸ¯ Probabilistic Sampler - Keep Only 20% of Traces
  probabilistic_sampler:
    sampling_percentage: 20.0

  ## âš¡ Tail Sampling Processor - Keep Important Traces
  tailsampling:
    decision_wait: 10s
    policies:
      - name: error_traces
        type: status_code
        status_code: { status_classes: [5xx] }
      - name: long_traces
        type: latency
        latency: { threshold_ms: 1000 }

  ## ğŸ“ˆ Span Metrics Processor - Convert Traces to Metrics
  spanmetrics:
    metrics_exporter: prometheus
    dimensions:
      - name: http.status_code
      - name: service.name

  ## ğŸš€ Batch Processor - Optimize Network Traffic
  batch:
    send_batch_size: 50
    timeout: 5s

  ## ğŸ›‘ Memory Limiter Processor - Prevents OOM Issues
  memory_limiter:
    check_interval: 1s
    limit_percentage: 75
    spike_limit_percentage: 20

  ## ğŸ” Redaction Processor - Remove API Keys and Authorization Headers
  attributes:
    actions:
      - key: http.headers.authorization
        action: delete
      - key: http.url
        action: delete

  ## âš™ï¸ Transform Processor - Normalize Service Names
  transform:
    metric_statements:
      - context: datapoint
        statements:
          - set(attributes["region"], "us-east-1") where attributes["region"] == nil

  ## ğŸ”„ Routing Processor - Send Logs to Different Destinations
  routing:
    from_attribute: service.name
    table:
      "frontend-service":
        exporters: [otlphttp]
      "backend-service":
        exporters: [logging]

  ## ğŸš§ Kubernetes Metadata Processor - Auto-tag K8s Data
  k8sattributes:
    auth_type: serviceAccount
    passthrough: false
    extract:
      metadata:
        - k8s.pod.name
        - k8s.namespace.name
        - k8s.node.name

exporters:
  otlphttp:
    endpoint: "https://ingest.<your-splunk-realm>.signalfx.com/v2/datapoint"
    headers:
      X-SF-TOKEN: "<your-splunk-token>"

  logging:
    verbosity: normal

  prometheus:
    endpoint: "0.0.0.0:8889"

service:
  pipelines:
    traces:
      receivers: [otlp]
      processors: [batch, attributes, filter, probabilistic_sampler, tailsampling, spanmetrics]
      exporters: [otlphttp]

    metrics:
      receivers: [prometheus]
      processors: [batch, memory_limiter, spanmetrics, transform, resource]
      exporters: [otlphttp, prometheus]

    logs:
      receivers: [fluentforward]
      processors: [batch, filter, attributes, k8sattributes, routing]
      exporters: [logging]
